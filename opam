opam-version: "2.0"
synopsis: "HOL-Light library necessary for translating unify"
description: """
This library contains an automatic translation in Rocq of the
HOL-Light Logic library using https://github.com/Deducteam/hol2dk.
"""
homepage: "https://github.com/Deducteam/coq-hol-light-Logic2"
dev-repo: "git+https://github.com/Deducteam/coq-hol-light-Logic2.git"
bug-reports: "https://github.com/Deducteam/coq-hol-light-Logic2/issues"
doc: "https://github.com/Deducteam/coq-hol-light-Logic2"
maintainer: "antoine.gontard@inria.fr"
authors: ["Antoine Gontard"]
license: "CeCILL-2.1"
depends: [
  "rocq-prover" {>= "9.0"}
  "coq-mathcomp-classical" {>= "1.8.0"}
  "coq-hol-light-real-with-N" {>= "2.0.0"}
  "coq-fourcolor-reals" {>= "1.4.0"}
  "coq-hol-light-Logic1"
]
build: [make "-j%{jobs}%"]
install: [make "install"]
tags: [
  "logpath:HOLLight_Logic2"
  "date:2025-08-16"
  "keyword:HOL-Light"
  "keyword:first order logic"
]
